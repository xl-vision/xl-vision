{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2015",
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "incremental": true,
    "allowJs": true,
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "middleware.ts"
  ],
  "exclude": ["node_modules"]
}
