{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@xl-vision/styled-engine-types": ["./packages/styled-engine-types/src"],
      "@xl-vision/styled-engine-types/*": ["./packages/styled-engine-types/src/*"],
      "@xl-vision/utils": ["./packages/utils/src"],
      "@xl-vision/utils/*": ["./packages/utils/src/*"],
      "@xl-vision/styled-engine": ["./packages/styled-engine/src"],
      "@xl-vision/styled-engine/*": ["./packages/styled-engine/src/*"],
      "@xl-vision/hooks": ["./packages/hooks/src"],
      "@xl-vision/hooks/*": ["./packages/hooks/src/*"],
      "@xl-vision/icons": ["./packages/icons/src"],
      "@xl-vision/icons/*": ["./packages/icons/src/*"],
      "@xl-vision/react": ["./packages/react/src"],
      "@xl-vision/react/*": ["./packages/react/src/*"]
    }
  },
  "exclude": ["**/node_modules", "**/modern", "**/legacy"]
}
