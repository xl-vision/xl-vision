{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "preserveSymlinks": true,
    "paths": {
      "csstype": ["./node_modules/csstype"],
      // "react": ["./node_modules/@types/react", "./node_modules/react"],
      // "react-dom": ["./node_modules/@types/react-dom", "./node_modules/react-dom"],
      // "styled-components": [
      //   "./node_modules/@types/styled-components",
      //   "./node_modules/styled-components"
      // ],
      "@xl-vision/styled-engine-types": ["./packages/styled-engine-types/src"],
      "@xl-vision/styled-engine-types/*": ["./packages/styled-engine-types/src/*"],
      "@xl-vision/utils": ["./packages/utils/src"],
      "@xl-vision/utils/*": ["./packages/utils/src/*"],
      "@xl-vision/styled-engine": ["./packages/styled-engine/src"],
      "@xl-vision/styled-engine/*": ["./packages/styled-engine/src/*"],
      "@xl-vision/hooks": ["./packages/hooks/src"],
      "@xl-vision/hooks/*": ["./packages/hooks/src/*"],
      "@xl-vision/useForm": ["./packages/useForm/src"],
      "@xl-vision/useForm/*": ["./packages/useForm/src/*"],
      "@xl-vision/usePopper": ["./packages/usePopper/src"],
      "@xl-vision/usePopper/*": ["./packages/usePopper/src/*"],
      "@xl-vision/icons": ["./packages/icons/src"],
      "@xl-vision/icons/*": ["./packages/icons/src/*"],
      "@xl-vision/react": ["./packages/react/src"],
      "@xl-vision/react/*": ["./packages/react/src/*"]
    }
  },
  "exclude": ["**/node_modules", "**/modern", "**/legacy", "**/dist"]
}
